{
  "extends": ["tslint:recommended", "tslint-react", "pwa-tslint-rules"],
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "lintOptions": {
    "typeCheck": true
  },
  "linterOptions": {
    "exclude": ["**/*.js", "**/*.jsx", "src/common/__generated__/**/*"]
  },
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "comment-format": [false],
    "completed-docs": [false],
    "class-decorator-order": {
      "severity": "warning"
    },
    "cyclomatic-complexity": {
      "severity": "warning"
    },
    "deprecation": {
      "severity": "warning"
    },
    "import-blacklist": [true, "bernie-common"],
    "indent": [true, "spaces", 2],
    "interface-name": ["never-prefix"],
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": false,
    "max-file-line-count": {
      "severity": "warning",
      "options": [300]
    },
    "max-line-length": [true, 140],
    "member-ordering": [false],
    "newline-before-return": true,
    "no-multiple-render-methods": {
      "severity": "warning"
    },
    "no-null-keyword": false,
    "no-parameter-reassignment": false,
    "no-relative-imports": [true, "allow-siblings"],
    "no-require-imports": true,
    "no-string-literal": false,
    "no-submodule-imports": false,
    "no-unsafe-any": false,
    "no-var-requires": true,
    "no-unused-variable": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": [false],
    "one-line": [false],
    "ordered-imports": false,
    "prefer-object-spread": false,
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "strict-boolean-expressions": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "single": "never"
      }
    ],
    "typedef": [true],
    "variable-name": false
  }
}
